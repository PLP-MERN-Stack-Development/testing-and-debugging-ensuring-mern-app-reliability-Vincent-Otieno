{
  "name": "mern-testing-assignment",
  "version": "1.0.0",
  "description": "MERN Stack Application with Comprehensive Testing",
  "main": "index.js",
  "scripts": {
    "install-all": "npm install && cd client && npm install && cd ../server && npm install",
    "test": "jest --coverage",
    "test:unit": "jest --selectProjects client server --testPathPattern=unit",
    "test:integration": "jest --selectProjects server --testPathPattern=integration",
    "test:e2e": "cd client && npm run test:e2e",
    "test:watch": "jest --watch",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "setup-test-db": "cd server && npm run setup-test-db"
  },
  "keywords": [
    "mern",
    "testing",
    "jest",
    "cypress",
    "react",
    "express",
    "mongodb"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.22.0",
    "babel-jest": "^29.7.0",
    "concurrently": "^8.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "dependencies": {}
}
